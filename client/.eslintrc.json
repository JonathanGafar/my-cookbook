{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"],
        "eol-last": ["error", "never"],
        "no-unused-vars": "off",
        "object-curly-spacing": ["error", "never"],
        "react/jsx-curly-spacing": ["error", {
          "when": "never",
          "children": {
            "when": "never"
          }
        }],
        "indent": ["error", "tab"],
        "react/prop-types": [0],
        "no-tabs": [0]
    }
}
